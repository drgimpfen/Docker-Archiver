version: "3.8"
services:
  app:
    container_name: docker-archiver-app
    restart: unless-stopped
    environment:
      DB_PASSWORD: ${DB_PASSWORD:-changeme123}
      SECRET_KEY: ${SECRET_KEY:-change-me}
    volumes:
      - /opt/stacks:/opt/stacks
      - ./archives:/archives
      - ./logs:/var/log/archiver
      - ./downloads:/tmp/downloads

